<div class="row">
    <div class="col s12 m12 xl12">
        <% articles.forEach(function(article) { %>
            <h2><a href="#!" onclick="apretaste.send({command:'CUBANET HISTORIA', data:{query: article.link}})"><%= article.title %></a></h2>
            <p><%= (article.description + '').substr(0, 200) %></p>
            <p><%= article.author %></p>
            <p><%= formatDate(article.pubDate) %></p>
            <% article.category.forEach(function(cat) { %>
                <a href="#!" onclick="apretaste.send({command:'CUBANET CATEGORIA', data:{query: cat}})"><%= cat %></a>
            <% }); %>
        <% }); %>
    </div>
</div>

<div class = "fixed-action-btn">
    <a href = "#searchModal" class = "btn-floating btn-large waves-effect waves-light green modal-trigger">
        <i class = "large material-icons">search</i>
    </a>
</div>

<div id = "searchModal" class = "modal bottom-sheet">
    <div class = "modal-content">
        <div class = "input-field">
            <textarea id = "searchQuery" class = "materialize-textarea"></textarea>
            <label for = "note">Buscar</label>
        </div>
    </div>
    <div class = "modal-footer">
        <a href = "#!" class = "modal-close waves-effect waves-light btn-flat">Cerrar</a>
        <a onclick = "sendSearch()" class = "modal-close waves-effect waves-green btn-flat">Buscar</a>
    </div>
</div>