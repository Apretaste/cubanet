<h1>Categoria: <%= category %></h1>

<% if (articles.length == 0) { %>
<p>Lo siento, a&uacute;n no tenemos historias para esta categor&iacute;a :'-(</p>
<% } %>
<% articles.forEach(function(article) { %>
<b>
    <a href = "#!" onclick = "apretaste.send({command:'CUBANET HISTORIA <% article.link %>', data:{link:'<%= article['link'] %>'}})"><%= article['title'] %></a>
</b>
<% article.description.substr(0, 200) %>
<br/>
<small>
    <font color = "gray">
        <% article['author'] %>,
        <% article['pubDate'] %>
    </font>
</small>

<% }); %>

<button class = "btn waves-effect waves-light" onclick = "apretaste.send({command:'CUBANET'})">
    M&aacute;s noticias
    <i class = "material-icons right">feed</i>
</button>